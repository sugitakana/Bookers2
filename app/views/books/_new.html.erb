      <h2 class="mt-3">New book</h2>
       <%= form_with model: book do |f| %>
        <div class="form-body p-1">
         <p>Title</p>
          <%= f.text_field :title, class:"form-control" %>
         <p>Opinion</p>
          <%= f.text_area :body, class:"form-control" %>
          <%= f.submit 'Create Book', :class=>"btn btn-success mt-3" %>
        </div>
       <% end %>