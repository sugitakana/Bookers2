<div class="container px-5 px-sm-0">
 　<div class="row">
     <div class="col-md-3">
       <%= render 'user', user: @user %>
       <h2 class="mt-3">New book</h2>
       <%= form_with model: @book_new do |f| %>
        <div class="form-body p-1">
         <p>Title</p>
         <%= f.text_field :title, class:"form-control" %>
         <p>Opinion</p>
         <%= f.text_area :body, class:"form-control" %>
         <%= f.submit 'Create Book', :class=>"btn btn-success mt-3" %>
        </div>
       <% end %>
     </div>
     <div class ="col-md-8 offset-md-1">
       <h2>Book detail</h2>
       <table class="table">
         <tr>
            <td><%= link_to user_path(@user) do %>
                   <%= image_tag @book.user.get_profile_image(100,100) %><br>
                   <%= @book.user.name %>
                <% end %></td>
            <td><%= link_to(book_path(@book)) do %>
                   <%= @book.title %>
                <% end %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
                <td><%= link_to "Edit",edit_book_path(@book), class:"btn btn-success btn-sm" %></td>
                <td><%= link_to "Destroy",book_path(@book),method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-danger btn-sm" %></td>
            <% end %>
         </tr>
      </table>
    </div>
  </div>
</div>