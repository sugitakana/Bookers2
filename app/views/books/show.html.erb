<h2>User info</h2>
<%= image_tag @user.get_profile_image(100,100) %>
<table>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
</table>

<p><%= link_to "編集", user_path(current_user.id) %></p>

<h2>New book</h2>
  <%= form_with model: @book_new do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

<h2>Book detail</h2>
<table>
  <tr>
    <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
    <td><%= link_to(book_path(@book)) do %>
           <%= @book.title %>
        <% end %></td>
    <td><%= @book.body %></td>
    <% if @book.user == current_user %>
      <td><%= link_to "Edit",edit_book_path(@book) %></td>
      <td><%= link_to "Destroy",book_path(@book),method: :delete, "data-confirm" => "本当に消しますか？" %></td>
    <% end %>
  </tr>
  <tr>
    <td><%= link_to(user_path(@user)) do %>
           <%= @book.user.name %>
        <% end %></td>
  </tr>
</table>