
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
<h2>Books</h2>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Body</th>
  </tr>
   <% @books.each do |book| %>
    <tr>
     <td></td>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
    </tr>
   <% end %>
</table>