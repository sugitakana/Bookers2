<h1>New book</h1>
  <%= form_with model: @post_image do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
<% @books.each do |book| %>
 <h2>Books</h2>
 <table>
   <tr>
     <th></th>
     <th>title</th>
     <th>Opinion</th>
   </tr>
   <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
   </tr>
 </table>
<% end %>