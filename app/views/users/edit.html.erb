<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-5 mx-auto my-3">
    <h2>User info</h2>
    <%= form_with model:@user, local:true do |f| %>
      <% if @user.errors.any? %>
        <h5><%= pluralize(@user.errors.count, "error") %> prohibited this book from being saved:</h5>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <div class="form-body">
       <%= form_with model:@user do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name, autofocus: true, id:"user_name", class:"form-control" %>
       </div>
       <div class="form-group">
          <label for="user_image">Image</label><br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
       </div>
       <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <%= f.text_area :introduction, id:"user_introduction", class:"form-control-file" %>
       </div>
       <%= f.submit "Update User", :class=>"btn btn-secondary" %>
       <% end %>
     <% end %>
  </div>
 </div>
</div>